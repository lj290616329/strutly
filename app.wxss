Page {font-size: 16px;height: 100%;margin: 0;padding: 0;background-color: #f5f5f5;}

icon {
  vertical-align: middle;
}
.input-placeholder,.textarea-placeholder{
  color: #b8b8b8;
  font-size: 28rpx;
}
/*错误提示*/
.prompt-box{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  bottom: 0;
  align-items: center;
  justify-content: center;
  z-index: 99999999;
  text-align: center;
  background-color: #eee;
}
.prompt{
  margin-bottom: 200rpx;
}
.prompt-icon{
  width: 320rpx;
  height: 320rpx;
  margin: 32rpx auto;
}
.prompt-icon image{
  width: 100%;
  height: 100%;
}
.prompt-msg{
  color: #888;
  
  margin: 32rpx auto 0;
  width: 60%;
}
.prompt-refresh{
  color:#FFB13B;
}
.prompt-btn{
  width: 12rem;
  height: 3rem;
  border-radius: 1.5rem;  
  font-size: 1rem;
  font-weight: normal;
  font-stretch: normal;
  line-height: 3rem;
  margin: 2rem auto 0;
  background-color: #FFB13B;
  color:#fff;
}
/*提示框*/
.warn{
  width: 96%;
  position: fixed;
  top: 0;
  background-color: #e75e58;
  font-size: 1rem;
  color: #fff;
  z-index: 99999;
  text-align: center;
  border-radius: 0.2rem;
  min-height: 1.4rem;
  line-height: 1.4rem;
  left: 2%;
}


/*授权样式*/
.mask{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 999999999999;
}
.modal-content{
  display: flex;
  flex-direction: column;
  width: 72%;  
  background-color: #fff;
  border-radius: 32rpx;
  position: relative;
  margin-bottom: 160rpx;
}
.modal-cancle{
  position: absolute;
  top:16rpx;
  left:16rpx;
  width: 54rpx;
  height: 54rpx;
}
.modal-cancle image{
  width: 100%;
  height:100%;
}
.modal-logo{
  margin: 100rpx auto 80rpx;
  width: 180rpx;
  height: 180rpx;
}
.modal-logo image{
  width: 100%;
  height: 100%;
  border: 6rpx solid #FFB13B;
  border-radius: 32rpx;
}
.modal-title image{
  width: 80%;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.modal-btns{
  margin: 48rpx 48rpx 80rpx;
  text-align: center;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-btn{
  flex: 1;
  border-radius: 48rpx;
  margin: 0 24rpx;
  background-color: #FFB13B;
  color: #fff;
}
