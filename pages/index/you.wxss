@import '/style/tab.wxss';

.head{
  width:100%;
  background-image: url(http://pic.strutly.cn/9ca119ee1ffd17975bdd2ceb5380a59.png);
  background-repeat: no-repeat;
  background-size: 100% 52.5vw;
  background-color: #fff;
  padding-bottom: 24rpx; 
  overflow: hidden; 
}

.personal{
  
  text-align: center;
  
}


.headimg{
  width:140rpx;
  height: 140rpx;
  display: block;
  border-radius: 50%;  
  margin: 48rpx auto 0;
  border:6rpx #fff solid;
}
.nickname{  
  font-family: '幼圆';
  font-weight: bold;
  color: #333;
  font-size: 34rpx;
  line-height: 2.2;
}
.follow{
  display: flex;
  margin: 0 auto 60rpx;
  width: fit-content;
  align-items: center;
  font-size: 28rpx;
  padding: 10rpx 18rpx;
  border-radius: 48rpx;
  background-color: #fff;  
}
.follow-image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.follow text{
  flex: 1;
}



