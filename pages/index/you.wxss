.my-list{
  display: flex;
  font-size: 30rpx;
  margin: 0 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 4rpx 48rpx 0 #ffe9c8; /*#ffe9c8;*/
}
.my-item{
  flex: 1;
  text-align: center;
}
.my-num{
  
  font-family: "圆体";
  font-weight: 600;
  color: #6D3A07;
  font-size: 40rpx;
} 
.content{
  padding-bottom: 6rem;
}
.panel{
  margin-top: 1rem;
}
.panel:first-child{
  margin: 0;
}
.media-box{
  display: flex;
  padding: 24rpx 32rpx;
  background-color: #fff;
  align-items: center;
  text-align: justify;
}
.media-hd{
  width: 180rpx;
  height: 155rpx;
  margin-right: 32rpx;
}
.media-hd image{
  width: 100%;
  height: 100%;
}
.media-bd{
  flex:1;
}
.media-des{
  font-size: 28rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.media-title{
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

